{% extends 'templates/glued.twig' %}

{% block content %}

<div class="title-block">
    <h3 class="title"> Role Privileges </h3>
    <p class="title-description"> Existing Privileges of roles self and creator <a class="pull-right" href="{{ path_for('acl.crossroad') }}">go back</a> </p>
</div>

<section class="section">
    <div class="row">
        
        <div class="col-md-6">
            <div class="card card-block">
                <div class="title-block">
                    <h3 class="title"> Existing privileges </h3>
                </div>
                {{ privileges_output | raw }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card card-block">
                <div class="title-block">
                    <h3 class="title"> New Privilege </h3>
                </div>
                
                <form action="{{ path_for('acl.new.privilege') }}" method="post">
                    <input type="hidden" name="formpage" value="role" />
                    
                    <input type="hidden" name="who" value="0" />
                  
                  <div class="form-group">
                    <label for="polozka0">Role</label>
                    <select name="role" class="form-control" id="polozka0">
                        <option value="self" selected>self</option>
                        <option value="creator">creator</option>
                    </select>
                  </div>
                  
                  <div class="form-group">
                    <label for="polozka1">Action</label>
                    <select name="action" class="form-control" id="polozka1">
                        {{ action_options | raw }}
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka2">Type</label>
                    <select name="type" class="form-control" id="polozka2">
                        <option value="table" selected>table</option>
                        <option value="global">every row</option>
                        <option value="object">one row</option>
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka3">Table name</label>
                    <select name="related_table" class="form-control" id="polozka3">
                        <option value="timepixels" selected>timepixels</option>
                        <option value="platby_mzdy">platby_mzdy</option>
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">Related id (for one row type)</label>
                    <input type="text" name="related_uid" class="form-control" id="polozka4" />
                  </div>
                    
                  <div class="form-group">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" name="neg" value="1" /> Negative privilege
                        </label>
                      </div>
                  </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create privilege</button>
                    </div>
                    
                    {{ csrf.field | raw  }}
                </form>
            </div>
        </div>
        
    </div>
</section>

{% endblock %}
