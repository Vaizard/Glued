{% extends 'templates/glued.twig' %}

{% block content %}

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">Existing Privileges of user {{ user.c_screenname }} (id: {{ user.c_uid }}) <a class="pull-right" href="{{ path_for('acl.crossroad') }}">back</a></div>
          <div class="panel-body">
            {{ privileges_output | raw }}
          </div>
        </div>
      
      {{ additional_javascript | raw }}
      
        <div class="panel panel-default">
            <div class="panel-heading">New Privilege of user {{ user.c_screenname }}</div>
            <div class="panel-body">
                <form action="{{ path_for('acl.new.privilege') }}" method="post">
                    <input type="hidden" name="formpage" value="user" />
                    <input type="hidden" name="user_id" value="{{ user.c_uid }}" />
                    
                    
                    <input type="hidden" name="role" value="user" />
                    <input type="hidden" name="who" value="{{ user.c_uid }}" />
                    
                  <div class="form-group">
                    <label for="polozka1">Action</label>
                    <select name="action" class="form-control" id="polozka1">
                        {{ action_options | raw }}
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka2">Type</label>
                    <select name="type" class="form-control" id="polozka2">
                        <option value="table" selected>table</option>
                        <option value="global">every row</option>
                        <option value="object">one row</option>
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka3">Table name</label>
                    <select name="related_table" class="form-control" id="polozka3">
                        <option value="timepixels" selected>timepixels</option>
                        <option value="platby_mzdy">platby_mzdy</option>
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">Related id (for one row type)</label>
                    <input type="text" name="related_uid" class="form-control" id="polozka4" />
                  </div>
                    
                  <div class="form-group">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" name="neg" value="1" /> Negative privilege
                        </label>
                      </div>
                  </div>
                    
                    <button type="submit" class="btn btn-default">create privilege</button>
                    {{ csrf.field | raw  }}
                </form>
            </div>
        </div>
    
    </div>

</div>

{% endblock %}
