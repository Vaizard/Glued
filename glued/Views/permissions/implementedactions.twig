{% extends 'templates/glued.twig' %}

{% block content %}

{% include 'permissions/includes/js_delete.twig' %}

<div class="title-block">
    <h3 class="title"> Implemented actions </h3>
    <p class="title-description"> Existing combinations in t_implemeted_action <a class="pull-right" href="{{ path_for('acl.crossroad') }}">go back</a> </p>
</div>

<section class="section">
    <div class="row">
        
        <div class="col-md-8">
            <div class="card card-block">
                <div class="title-block">
                    <h3 class="title"> Existing combinations </h3>
                </div>
                {{ privileges_output | raw }}
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card card-block">
                <div class="title-block">
                    <h3 class="title"> New Combination </h3>
                </div>
                
                <form action="{{ path_for('acl.new.implemented.action') }}" method="post">
                    
                  <div class="form-group">
                    <label for="polozka3">Table name</label>
                    <select name="related_table" class="form-control" id="polozka3">
                        {{ table_options | raw }}
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka1">Action</label>
                    <select name="action" class="form-control" id="polozka1">
                        {{ action_options | raw }}
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka1">Statuses</label>
                    <select name="statuses[]" class="form-control" id="polozka1" multiple>
                        {{ status_options | raw }}
                    </select>
                  </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create rule</button>
                    </div>
                    
                    {{ csrf.field | raw  }}
                </form>
            </div>
        </div>
        
    </div>
</section>

{% endblock %}
