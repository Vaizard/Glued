{% extends 'templates/glued.twig' %}

{% block content %}

{% include 'permissions/includes/js_delete.twig' %}
{% include 'permissions/includes/js_update.twig' %}

<div class="title-block">
    <h3 class="title"> Edit Action </h3>
    <p class="title-description"> Edit page for action {{ action_name }} (id: {{ action_id }}) <a class="pull-right" href="{{ path_for('acl.developer') }}">go back</a> </p>
</div>

<section class="section">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-block">
                <div class="title-block">
                    <h3 class="title"> Change name of action </h3>
                </div>
                
                  <div class="form-group">
                    <label for="newtitle">Name of action</label>
                    <input type="text" name="title" class="form-control" id="newtitle" value="{{ action_name }}" />
                  </div>
                    
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" onclick="update_action({{ action_id }});">Change</button>
                    </div>
                    
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card card-block">
                <div class="title-block">
                    <h3 class="title"> Delete this action </h3>
                </div>
                
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" onclick="delete_action({{ action_id }});">Delete</button>
                    </div>
                    
                <h4>Occurrence of action</h4>
                {{ output | raw  }}
                
            </div>
        </div>
    </div>
</section>

{% endblock %}
