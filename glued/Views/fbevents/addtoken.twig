{% extends 'templates/glued.twig' %}

{% block content %}

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading clearfix">
            <a href="{{ path_for('fbevents.main') }}" class="pull-right">back</a>
          </div>
          <div class="panel-body">
                
                <form action="{{ path_for('fbevents.addtoken') }}" method="post">
                    
                  <div class="form-group">
                    <label for="polozka4">Title of token (name it)</label>
                    <input type="text" name="title" class="form-control" id="polozka4" />
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">App ID (long int number)</label>
                    <input type="text" name="app_id" class="form-control" id="polozka4" />
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">App secret (long hexa number)</label>
                    <input type="text" name="app_secret" class="form-control" id="polozka4" />
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">Token (really long alfanum string)</label>
                    <input type="text" name="token" class="form-control" id="polozka4" />
                  </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Token</button>
                    </div>
                    
                    {{ csrf.field | raw  }}
                </form>
            
          </div>
        </div>
    </div>

</div>

{% endblock %}
