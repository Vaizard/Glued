{% extends 'templates/glued.twig' %}

{% block content %}

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading clearfix">
            <a href="{{ path_for('fbevents.main') }}" class="pull-right">back</a>
          </div>
          <div class="panel-body">
                
                <form action="{{ path_for('fbevents.addpage') }}" method="post">
                    
                  <div class="form-group">
                    <label for="polozka1">Use token</label>
                    <select name="token_id" class="form-control" id="polozka1">
                        {{ token_options | raw }}
                    </select>
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">Page id or page URL (just page name part of url)</label>
                    <input type="text" name="page_something" class="form-control" id="polozka4" />
                  </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Page</button>
                    </div>
                    
                    {{ csrf.field | raw  }}
                </form>
            
          </div>
        </div>
    </div>

</div>

{% endblock %}
