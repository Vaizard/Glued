{% extends 'templates/glued.twig' %}

{% block content %}
        
        <h1>test na generování plateb</h1>
        
  <div class="row">

    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">Nová platba</div>
        <div class="panel-body">

          <form action="{{ path_for('platbynew') }}" method="post">

            <div class="form-group">
              <label for="sender_account">číslo vašeho účtu</label>
              <input type="text" name="sender_account" id="sender_account" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="sender_bank">číslo vaší banky</label>
              <input type="text" name="sender_bank" id="sender_bank" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="recipient_account">číslo cílového účtu</label>
              <input type="text" name="recipient_account" id="recipient_account" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="recipient_bank">číslo cílové banky</label>
              <input type="text" name="recipient_bank" id="recipient_bank" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="amount">částka</label>
              <input type="text" name="amount" id="amount" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="symbol_variable">variabilní symbol</label>
              <input type="text" name="symbol_variable" id="symbol_variable" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="symbol_constant">konstantní symbol</label>
              <input type="text" name="symbol_constant" id="symbol_constant" placeholder="" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="symbol_specific">specifický symbol</label>
              <input type="text" name="symbol_specific" id="symbol_specific" placeholder="" class="form-control" value="">
            </div>
            
            <div class="form-group">
              <label for="message">AV zpráva (message)</label>
              <input type="text" name="message" id="message" placeholder="" class="form-control" value="">
            </div>
            
            <div class="form-group">
              <label for="note">Poznámka (note, jen pro nás)</label>
              <textarea name="note" id="note" placeholder="" class="form-control" rows="3"></textarea>
            </div>
            
            <button type="submit" class="btn btn-default">Vlož</button>
            {{ csrf.field | raw  }}
            
          </form>
        </div>
      </div>
    </div>
  </div>


{% endblock %}