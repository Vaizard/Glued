{% extends 'templates/glued.twig' %}

{% block content %}

{{ additional_javascript | raw }}

<div class="title-block">
    <h3 class="title"> Accounting Groups</h3>
</div>

<div class="col-md-12">
    <div class="card">
        <div class="card-block">
            <div class="card-title-block">
                <h3 class="title">Existing groups in definition {{ definition }}<a href="{{ path_for('accounting.groups') }}" class="pull-right" style="margin: 0 20px;">all definitions</a></h3>
            </div>
            <section class="example">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Definition ID</th>
                                <th>Definition Name</th>
                                <th>Group number</th>
                                <th>Group description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{ groups_output | raw }}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>


<div class="col-md-12">
    <div class="card">
        <div class="card-block">
            <div class="card-title-block">
                <h3 class="title">New group in definition {{ definition }}</h3>
            </div>
            <section class="example">
                form
            </section>
        </div>
    </div>
</div>

{% endblock %}
