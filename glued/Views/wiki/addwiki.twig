{% extends 'templates/glued.twig' %}

{% block content %}

<div class="title-block">
    <h3 class="title"> Wiki administration </h3>
</div>

<div class="row">

    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading clearfix">
            <a href="{{ path_for('wiki.admin') }}" class="pull-right">back</a>
          </div>
          <div class="panel-body">
                
                <form action="{{ path_for('wiki.addwiki') }}" method="post">
                    
                  <div class="form-group">
                    <label for="polozka4">Name of Wiki</label>
                    <input type="text" name="name" class="form-control" id="polozka4" />
                  </div>
                    
                  <div class="form-group">
                    <label for="polozka4">URL of Wiki (topic)</label>
                    <input type="text" name="url" class="form-control" id="polozka4" />
                  </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Wiki</button>
                    </div>
                    
                    {{ csrf.field | raw  }}
                </form>
            
          </div>
        </div>
    </div>

</div>

{% endblock %}
